<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Graph View -->
    <record id="view_archive_dashboard_graph" model="ir.ui.view">
        <field name="name">archive.management.graph</field>
        <field name="model">archive.management</field>
        <field name="arch" type="xml">
            <graph string="Documents" type="bar">
                <field name="document_type"/>
                <field name="state"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_archive_dashboard_pivot" model="ir.ui.view">
        <field name="name">archive.management.pivot</field>
        <field name="model">archive.management</field>
        <field name="arch" type="xml">
            <pivot string="Documents Analysis" display_quantity="true">
                <field name="document_type" type="row"/>
                <field name="state" type="col"/>
            </pivot>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_archive_dashboard_calendar" model="ir.ui.view">
        <field name="name">archive.management.calendar</field>
        <field name="model">archive.management</field>
        <field name="arch" type="xml">
            <calendar string="Documents" date_start="date" mode="month" color="document_type">
                <field name="name"/>
                <field name="document_type"/>
            </calendar>
        </field>
    </record>

    <!-- Dashboard Action -->
    <record id="action_archive_dashboard" model="ir.actions.act_window">
        <field name="name">Documents Dashboard</field>
        <field name="res_model">archive.management</field>
        <field name="view_mode">graph,pivot,calendar</field>
        <field name="context">{'search_default_group_by_type': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No documents found
            </p>
            <p>
                Create new documents to see statistics.
            </p>
        </field>
    </record>
</odoo>